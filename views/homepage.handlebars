 <div class="hero bg-primary text-white text-center py-5">
    <div class="container">
        <h1>Welcome to our Tech Blog</h1>
        <p></p>
    </div>
</div>


<div class="post-container">
    {{#each posts as |post|}}
    <article class="post">
        {{> post-info post }}
    </article>
    {{else}}
    <h6 class="pb-4 has-text-centered is-italic">there are currently no posts</h6>
    {{/each}}
</div>

<footer class="footer mt-auto py-3 bg-dark">
    <div class="container text-center text-white">
        <span>&copy; 2023 Tech Blog. All rights reserved.</span>
    </div>

    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}
</footer>
